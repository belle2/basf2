Import('env')

import os

testbeam = False
if 'BELLE2_RELEASE_DIR' in os.environ.keys():
    testbeam = os.path.isdir(os.path.join(os.environ['BELLE2_RELEASE_DIR'], 'testbeam'))
if not testbeam and 'BELLE2_LOCAL_DIR' in os.environ.keys():
    testbeam = os.path.isdir(os.path.join(os.environ['BELLE2_LOCAL_DIR'], 'testbeam'))

if testbeam:
    env['CPPDEFINES']['ALLOW_TELESCOPES_IN_GBLFITMODULE'] = True

env['LIBS'] = ['framework', 'cdc_dataobjects',
               'genfit2', '$ROOT_LIBS', 'EG', 'svd', 'pxd',
               'alignment_dataobjects', 'bklm', 'calibration', 'calibration_dataobjects',
               'eklm_dataobjects', 'eklm_dbobjects', 'eklm', 'cdc', 'alignment_dbobjects', 'vxd']

Return('env')

