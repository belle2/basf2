    variable='daughterProductOf(extraInfo(SignalProbability))',
    binning=(500, 0.0, 6.0),
    efficiency=0.8,
    purity=0.00001,
    userCut=''
)


particles = []
particles.append(Particle('pi+', mvaConfig_chargedFSP))
particles.append(Particle('K+', mvaConfig_chargedFSP))


