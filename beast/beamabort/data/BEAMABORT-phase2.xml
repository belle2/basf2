      <r_dia unit="cm">2.04,2.04,2.04,2.04,2.04,2.04,2.04,2.04</r_dia>
      <ThetaZ unit="deg">180.0,180.0,180.0,180.0,0,0,0,0</ThetaZ>
      <Phi unit="deg">55.0,125.0,235.0,305.0,55.0,125.0,235.0,305.0</Phi>
    </Active>

