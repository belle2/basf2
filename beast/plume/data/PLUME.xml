<?xml version="1.0" encoding="UTF-8"?>
<DetectorComponent name="PLUME">
  <Creator library="beast">PLUMECreator</Creator>
  <Content>
    <!-- normally, parameters should be defined with a unit attribute. This
         enables automatic conversion to the default framework unit --> 
    <stepSize unit="um">200</stepSize>
    <!--if we don't supply a unit there can be no conversion but is still valid -->
    <divisions>32</divisions>
    <!-- valid values for false are: "", "0", "off", "false" (case
         insensitive), everything else will be interpreted as true -->
    <foo>true</foo>
    <!-- we can also have arrays as parameters which makes it easy to get a
         number of values as vector<double>.  The numbers can be divided by
         whitespace, comma or semi-colon -->
    <bar unit="cm">1 2 
    </bar>
    
    <Active>
      <Material>PLUME-Material</Material>

      <z_plume unit="cm">11.6312</z_plume>
      <r_plume unit="cm">5.5</r_plume>
      <ThetaZ unit="deg">0.0</ThetaZ>
      <Phi unit="deg">135.0</Phi>      
      
      <elecBandX unit="mm">0.300</elecBandX>
      <integrationTime unit="us">100.0</integrationTime>
      
      <AirGap unit="um">0.1</AirGap>
      
      <MetalThickness unit="um">5.0</MetalThickness>
      <SubstrateThickness unit="um">30.0</SubstrateThickness>
      <EpitaxialThickness unit="um">15.0</EpitaxialThickness>
      
      <ElecBandY unit="mm">3.0</ElecBandY>      
      <SensorDistance unit="um">500.0</SensorDistance>
      <nPixelsX>1152</nPixelsX>
      <nPixelsY>576</nPixelsY>
      <pitchX unit="um"> 18.4</pitchX>
      <pitchY unit="um"> 18.4</pitchY>
      <DistanceFromFoamCenter unit="um">1000.0</DistanceFromFoamCenter>
      <GlueThickness unit="um">10.0</GlueThickness>
      <KaptonThickness unit="um">100.0</KaptonThickness>
      <AluminiumThickness unit="um">20.0</AluminiumThickness>
    </Active>


    <Active>
      <Material>PLUME-Material</Material>

      <z_plume unit="cm">-0.7869</z_plume>
      <r_plume unit="cm">5.5</r_plume>
      <ThetaZ unit="deg">0.0</ThetaZ>
      <Phi unit="deg">225.0</Phi>      
      
      <elecBandX unit="mm">0.300</elecBandX>
      <integrationTime unit="us">100.0</integrationTime>

      <AirGap unit="um">0.1</AirGap>

      <MetalThickness unit="um">5.0</MetalThickness>
      <SubstrateThickness unit="um">30.0</SubstrateThickness>
      <EpitaxialThickness unit="um">15.0</EpitaxialThickness>
      
      <ElecBandY unit="mm">3.0</ElecBandY>      
      <SensorDistance unit="um">500.0</SensorDistance>
      <nPixelsX>1152</nPixelsX>
      <nPixelsY>576</nPixelsY>
      <pitchX unit="um"> 18.4</pitchX>
      <pitchY unit="um"> 18.4</pitchY>
      <DistanceFromFoamCenter unit="um">1000.0</DistanceFromFoamCenter>
      <GlueThickness unit="um">10.0</GlueThickness>
      <KaptonThickness unit="um">100.0</KaptonThickness>
      <AluminiumThickness unit="um">20.0</AluminiumThickness>
    </Active>

  </Content>
</DetectorComponent>
