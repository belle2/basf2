#!/bin/bash

if [ -e $HOME/belle2/latest ]; then
cd $HOME/belle2/latest
else 
cd $HOME/belle2/release
fi
source ../tools/setup_belle2
setuprel
nsm2log=$1/nsm2
mkdir -p $nsm2log
nsm2host=$2
nsm2port=$3
nsmd2 -b -p $nsm2port -s $nsm2port -h $nsm2host -l $nsm2log > /dev/null 2> /dev/null < /dev/null &
echo "booted nsmd2 (hostname=${nsm2host}, port=${nsm2port})"
