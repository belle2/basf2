#!/bin/bash

label=`date +%Y-%m-%d-%H-%M`

restartBySSH() {
  mkdir -p ~/run/$2/$1
  ssh $1 "killall $2"
  ssh $1 "source ~/belle2/release/daq/slc/extra/bin/setup.sh ~/belle2 release local $2 $3 $4&> ~/run/$2/$1/${label}.log" &
}

source ~/belle2/release/daq/slc/extra/bin/setup.sh ~/belle2 release global logcollectord &> ~/run/logger/belle-rpc1/logcollectord-${label}.log &

