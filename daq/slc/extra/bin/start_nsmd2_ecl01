#!/bin/bash

dir="${HOME}/belle2/release/daq/slc/extra/bin"

echo "killing nsmd2"
for i in $(seq 5003 5013)
do
echo "killing nsmd2 in cpr${i}"
ssh cpr${i} "killall nsmd2 1&>2 /dev/null;killall datad 1&>2 /dev/null"
done
echo "killing nsmd2 in ecl01"
ssh ecl01 "killall nsmd2 1&>2 /dev/null;killall datad 1&>2 /dev/null"

echo "booting nsmd2"
for i in $(seq 5003 5013)
do
echo "booting nsmd2 in cpr${i}"
ssh cpr${i} "${dir}/boot_nsmd2_local cpr${i}"
done
echo "booting nsmd2 in ecl01"
ssh ecl01 "${dir}/boot_nsmd2_local ecl01"
sleep 5