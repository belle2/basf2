#!/bin/bash

label=`date +%Y-%m-%d-%H-%M`

source ~/belle2/release/daq/slc/extra/bin/setup.sh ~/belle2 release global
mkdir -p  ~/run/runcontrold/runcontrol/${HOSTNAME}
killall runcontrold
#kill `ps aux | grep "runcontrold runcontrol" | grep -v grep | awk '{print $2}'`
runcontrold svd &> ~/run/runcontrold/runcontrol/${HOSTNAME}/svd_${label}.log &
runcontrold ttd &> ~/run/runcontrold/runcontrol/${HOSTNAME}/ttd_${label}.log &
runcontrold runcontrol &> ~/run/runcontrold/runcontrol/${HOSTNAME}/runcontrol_${label}.log &

