#!/bin/bash

label=`date +%Y-%m-%d-%H-%M`

stopBySSH() {
  ssh $1 "mkdir -p ~/run/$2/$1"
  ssh $1 "killall $2; killall -9 basf2"
}

#source ${BELLE2_LOCAL_DIR}/daq/slc/extra/bin/nsm2_global.sh
#mkdir -p  ~/run/runcontrold/belle-rpc1
#kill `ps aux | grep "runcontrold svd" | grep -v grep | awk '{print $2}'`

killall -9 basf2
kill `ps aux | grep "rocontrold ROPC01" | grep -v grep | awk '{print $2}'`

stopBySSH cpr010 cprcontrold CPR010 svd
stopBySSH cpr011 cprcontrold CPR011 svd


