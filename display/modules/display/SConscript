Import('env')
import os

if env.has_key('HAS_TEVE'):
  if not env['HAS_TEVE']:
    print "DisplayModule disabled, please recompile root with opengl support (on Debian/Ubuntu you'll probably only need to install libglu1-mesa-dev and rebuild)"

  env['CONTINUE'] = env['HAS_TEVE']
  env['LIBS'] = ['$ROOT_LIBS', 'tracking', 'framework', 'geometry', 'vxd', 'vxd_dataobjects', 'pxd_dataobjects', 'svd_dataobjects', 'cdc_dataobjects', 'top_dataobjects', 'ecl_dataobjects', 'bklm_dataobjects', 'genfit', 'ecl'] + env['TEVE_LIBS']

Return('env')
