#!/bin/bash
# Yanliang Han
# 2011-11
# copy file to storage element and register it to LFC and AMGA

DIRACROOT=${DIRACROOT:-$DIRAC/..}
. $DIRACROOT/../bashrc
# check if gbasf2 is unreachable by PATH
path=`which gbasf2`
gbasf2_path=`dirname path`/..
find ${gbasf2_path}/lib -name gbasf2.py >/dev/null 2>&1

if [ $? -eq 1 ]
then
 BELLE2_LOCAL_DIR=${BELLE2_LOCAL_DIR:-..}
 ${BELLE2_LOCAL_DIR}/gbasf2/lib/gbasf2output.py "$@"
else
 ${gbasf2_path}/lib/gbasf2output.py "$@"
fi

exit $?
