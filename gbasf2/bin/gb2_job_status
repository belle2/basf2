#!/bin/bash

# Yanliang Han
# 2011-11
#get jobs or projects status


DIRACROOT=${DIRACROOT:-$DIRAC}
. $DIRACROOT/bashrc
# check if gbasf2 is unreachable by PATH
path=`which gbasf2`
gbasf2_path=`dirname path`/..
find ${gbasf2_path}/lib -name gb2_job_status.py >/dev/null 2>&1
if [ $? -eq 1 ]
then
 BELLE2_LOCAL_DIR=${BELLE2_LOCAL_DIR:-..}
 ${BELLE2_LOCAL_DIR}/gbasf2/lib/gb2_job_status.py "$@"
else
 ${gbasf2_path}/lib/gb2_job_status.py "$@"
fi

exit $?
