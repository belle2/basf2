<?xml version="1.0" encoding="UTF-8"?>
<DetectorComponent name="TB"
  xmlns:xi="http://www.w3.org/2001/XInclude">
  <Creator library="pxd">TBCreator</Creator>
  <Content>
    <!-- If this is true, TrueHits will only be created for primary particles,
      secondaries produced by Geant4 will not create TrueHits -->
    <OnlyPrimaryTrueHits>false</OnlyPrimaryTrueHits>
    <!--Settings for background and exposure studies -->
    <ActiveChips desc="Set to true to make chips on sensors sensitive">false</ActiveChips>
    <SeeNeutrons desc="Set to true to make sensitive detectors see neutrons">false</SeeNeutrons>
    <SensitiveThreshold desc="Minimum deposited energy per geant4 step"
      unit="eV">1.0</SensitiveThreshold>
    <Volumes>

      <Volume>
        <Name>DUTContainer</Name>
        <DZ unit="cm">0</DZ>

        <DX unit="um">0</DX>
        <DY unit="um">0</DY>
        <Theta unit="deg">0</Theta>
        <Phi unit="deg">0</Phi>
        <Psi unit="deg">0</Psi>
        <xi:include href="TB2012-Snippets.xml"
          xpointer="xpointer(//Snippet[@name='ModuleContainer']/*)" />
        <Volume>
          <Name>DUT</Name>
          <xi:include href="TB2012-Snippets.xml"
            xpointer="xpointer(//Snippet[@name='DUTSensor_Belle2_H4_1_15']/*)" />
            <!-- xpointer="xpointer(//Snippet[@name='DUTSensor_Belle1_H4_1_04']/*)" /> -->
            <!-- xpointer="xpointer(//Snippet[@name='DUTSensor_ILC1']/*)" /> -->
            <!-- xpointer="xpointer(//Snippet[@name='DUTSensor_ILC2']/*)" /> -->
            <!-- xpointer="xpointer(//Snippet[@name='DUTSensor_ILC3']/*)" /> -->
            <!-- xpointer="xpointer(//Snippet[@name='TelescopeSensor']/*)" /> -->
          <Active>
            <SensorID>1</SensorID>
            <xi:include href="TB2012-Snippets.xml"
              xpointer="xpointer(//Snippet[@name='DUTActive_Belle2_H4_1_15']/*)" />
              <!-- xpointer="xpointer(//Snippet[@name='DUTActive_Belle1_H4_1_04']/*)" /> -->
              <!-- xpointer="xpointer(//Snippet[@name='DUTActive_ILC1']/*)" /> -->
              <!-- xpointer="xpointer(//Snippet[@name='DUTActive_ILC2']/*)" /> -->
              <!-- xpointer="xpointer(//Snippet[@name='DUTActive_ILC3']/*)" /> -->
              <!-- xpointer="xpointer(//Snippet[@name='TelescopeActive']/*)" /> -->
          </Active>
        </Volume>
        <xi:include href="TB2012-Snippets.xml"
          xpointer="xpointer(//Snippet[@name='AluminiumWindows']/*)" />
      </Volume>

    </Volumes>
  </Content>
</DetectorComponent>
