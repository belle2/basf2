"""\
This tool will generate validation plots from the ROOT file
generated by the calibration validation algorithm
"""
import ROOT
from pxd.calibration.validation import analyse_root_file
import argparse


def get_argument_parser():
    parser = argparse.ArgumentParser(description=__doc__, formatter_class=argparse.RawDescriptionHelpFormatter)
    parser.add_argument("--inputfile", "-i", default="", type=str,
            help="input file for the analysis.")
    return parser


if __name__ == "__main__":
    # Arguments
    args = get_argument_parser().parse_args()
    ROOT.gROOT.SetBatch(True)
    analyse_root_file(args.inputfile)
