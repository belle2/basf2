#!/usr/bin/env python3
# This script checks if the standard reconstruction also runs without attached MC inforamation (which is the case for real data).
#
# To test this, we simulate 1 event with evtgen, then get rid of all the "none-detector" data (in the future we should probably use the packers for this), read it in again and execute the full reconstruction. This should not fail.

import basf2
from simulation import add_simulation
from reconstruction import add_reconstruction

path = basf2.create_path()
path.add_module("EventInfoSetter", evtNumList=[1])
path.add_module("EvtGenInput")
add_simulation(path)
path.add_module('RootOutput', outputFileName="evtgen_bbar_no_mc.root", branchNames=["ARICHDigits", "BKLMDigits", "ECLDigits", "EKLMDigits", "CDCHits", "SVDShaperDigits", "PXDDigits", "TOPDigits"])

basf2.process(path)
