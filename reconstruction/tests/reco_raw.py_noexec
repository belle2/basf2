#!/usr/bin/env python3
# -*- coding: utf-8 -*-

import sys
from basf2 import create_path, process
from rawdata import add_unpackers
from reconstruction import add_reconstruction, add_cosmics_reconstruction

from basf2 import conditions
conditions.override_globaltags(['validation_2020-03-06'])

main = create_path()

main.add_module('RootInput')

add_unpackers(main)

if sys.argv[1] == 'cosmic':
    add_cosmics_reconstruction(main)
else:
    add_reconstruction(main)

process(main)
