<?xml version="1.0" encoding="UTF-8"?>
<Components xmlns:xi="http://www.w3.org/2001/XInclude">
  <!-- For more documentation refer to pxd/PXD-Components.xml -->
  <Ladder layer="3">
    <shift  unit="mm">  3.994</shift>
    <radius unit="mm"> 38.160</radius>
    <Sensor type="Layer3"   id="1" unit="mm">  88.200</Sensor>
    <Sensor type="Layer3"   id="2" unit="mm"> -34.000</Sensor>
  </Ladder>
  <Ladder layer="4">
    <shift  unit="mm">  8.408</shift>
    <radius unit="mm"> 80.160</radius>
    <slantedAngle unit="deg"> 11.900</slantedAngle>
    <slantedRadius unit="mm"> 66.678</slantedRadius>
    <Sensor type="Slanted1" id="1" unit="mm"> 156.098</Sensor>
    <Sensor type="Origami1" id="2" unit="mm">  32.520</Sensor>
    <Sensor type="BackEnd2" id="3" unit="mm"> -92.560</Sensor>
  </Ladder>
  <Ladder layer="5">
    <shift  unit="mm"> 14.120</shift>
    <radius unit="mm">115.160</radius>
    <slantedAngle unit="deg"> 17.200</slantedAngle>
    <slantedRadius unit="mm"> 95.983</slantedRadius>
    <Sensor type="Slanted1"  id="1" unit="mm"> 226.498</Sensor>
    <Sensor type="Origami1"  id="2" unit="mm"> 104.120</Sensor>
    <Sensor type="Origami2"  id="3" unit="mm"> -20.960</Sensor>
    <Sensor type="BackEnd2"  id="4" unit="mm">-146.040</Sensor>
  </Ladder>
  <Ladder layer="6">
    <shift  unit="mm"> 17.190</shift>
    <radius unit="mm">140.160</radius>
    <slantedAngle unit="deg"> 21.100</slantedAngle>
    <slantedRadius unit="mm">116.749</slantedRadius>
    <Sensor type="Slanted2" id="1" unit="mm"> 299.094</Sensor>
    <Sensor type="Origami1" id="2" unit="mm"> 177.600</Sensor>
    <Sensor type="Origami1" id="3" unit="mm">  52.600</Sensor>
    <Sensor type="Origami2" id="4" unit="mm"> -72.480</Sensor>
    <Sensor type="BackEnd3" id="5" unit="mm">-197.560</Sensor>
  </Ladder>

  <Sensor type="Layer3">
    <Color>#99000a</Color>
    <Material>Si</Material>
    <width  unit="mm"> 40.400</width>
    <length unit="mm">122.000</length>
    <height unit="um">320.000</height>
    <Active>
      <u unit="mm"> 0.940</u>
      <v unit="mm"> 0.990</v>
      <stripsU>768</stripsU>
      <stripsV>768</stripsV>
      <width  unit="mm">38.520</width>
      <length unit="mm">120.020</length>
      <height unit="um">320.000</height>
      <stepSize unit="um">5</stepSize>
    </Active>
    <Component type="KaptonFrontSmallSensor">
      <u unit="mm"> 20.200</u> <v unit="mm"> 61.000</v> <w unit="mm"> above</w>
    </Component>
  </Sensor>

  <!-- There are only three different Sensors in the SVD: Layer3, slanted
       sensors and the rest. But the amount of Kapton and other components can
       change along the ladder for the outer layers. So that we not have to
       specify the SensitiveArea and common components we define a SensorBase
       which we can "inherit" for all Sensors by using xinclude directives -->

  <SensorBase type="Slanted">
    <Color>#99000a</Color>
    <Material>Si</Material>
    <width  unit="mm">60.630</width>
    <width2 unit="mm">41.020</width2>
    <length unit="mm">125.580</length>
    <height unit="um">300</height>
    <Active>
      <u unit="mm"> 1.520</u>
      <v unit="mm"> 1.390</v>
      <stripsU>768</stripsU>
      <stripsV>512</stripsV>
      <width  unit="mm">57.590</width>
      <width2 unit="mm">38.420</width2>
      <length unit="mm">122.760</length>
      <height unit="um"> 300</height>
      <stepSize unit="um">5</stepSize>
    </Active>
  </SensorBase>

  <SensorBase type="Normal">
    <Color>#99000a</Color>
    <Material>Si</Material>
    <width  unit="mm">59.600</width>
    <length unit="mm">124.880</length>
    <height unit="um">320</height>
    <Active>
      <u unit="mm"> 0.940</u>
      <v unit="mm"> 0.990</v>
      <stripsU>768</stripsU>
      <stripsV>512</stripsV>
      <width  unit="mm">57.720</width>
      <length unit="mm">122.900</length>
      <height unit="um"> 320</height>
      <stepSize unit="um">5</stepSize>
    </Active>
  </SensorBase>


  <Sensor type="Slanted1" slanted="true">
    <!-- let's include all basic parameters from the SensorBase attribute with
         the type "Slanted" so that we do not have to repeat the sensor
         definition all the time just for different sub components -->
    <xi:include xpointer="xpointer(//SensorBase[@type='Slanted']/*)" />
    <Component type="KaptonFrontSlanted">
      <u unit="mm"> 30.315</u> <v unit="mm"> 62.790</v> <w unit="mm"> above </w>
    </Component>
  </Sensor>

  <Sensor type="Slanted2" slanted="true">
    <xi:include xpointer="xpointer(//SensorBase[@type='Slanted']/*)" />
    <Component type="KaptonFrontSlanted">
      <u unit="mm"> 30.315</u> <v unit="mm"> 62.790</v> <w unit="mm"> above </w>
    </Component>
  </Sensor>

  <Sensor type="BackEnd2">
    <xi:include xpointer="xpointer(//SensorBase[@type='Normal']/*)" />
    <Component type="KaptonFlex">
      <u unit="mm"> 29.800</u> <v unit="mm"> 62.440</v> <w unit="mm"> below </w>
    </Component>
    <Component type="RohacellPad">
      <u unit="mm"> 29.800</u> <v unit="mm"> 62.440</v> <w unit="mm"> above </w>
    </Component>
  </Sensor>

  <Sensor type="BackEnd3">
    <xi:include xpointer="xpointer(//SensorBase[@type='Normal']/*)" />
    <Component type="KaptonFlex">
      <u unit="mm"> 29.800</u> <v unit="mm"> 62.440</v> <w unit="mm"> below </w>
    </Component>
    <Component type="RohacellPad">
      <u unit="mm"> 29.800</u> <v unit="mm"> 62.440</v> <w unit="mm"> above </w>
    </Component>
  </Sensor>

  <Sensor type="Origami1">
    <xi:include xpointer="xpointer(//SensorBase[@type='Normal']/*)" />
    <Component type="KaptonFrontBigSensor">
      <u unit="mm"> 29.800</u> <v unit="mm"> 62.440</v> <w unit="mm"> above</w>
    </Component>
    <!--Component type="Kapton">
      <u unit="mm"> 29.800</u> <v unit="mm"> 62.440</v> <w unit="mm"> above</w>
    </Component-->
  </Sensor>

  <Sensor type="Origami2">
    <xi:include xpointer="xpointer(//SensorBase[@type='Normal']/*)" />
    <Component type="KaptonFrontBigSensor">
      <u unit="mm"> 29.800</u> <v unit="mm"> 62.440</v> <w unit="mm"> above</w>
    </Component>
    <!--Component type="Kapton">
      <u unit="mm"> 29.800</u> <v unit="mm"> 62.440</v> <w unit="mm"> above</w>
    </Component-->
  </Sensor>

  <Component name="KaptonFrontSmallSensor">
    <Material>SVD_KaptonFront</Material>
    <Color>#660000</Color>
    <width  unit="mm">40.400</width>
    <length unit="mm">122.000</length>
    <height unit="mm">0.100</height>
  </Component>
  <Component name="KaptonFrontBigSensor">
    <Material>SVD_KaptonFront</Material>
    <Color>#660000</Color>
    <width  unit="mm">59.600</width>
    <length unit="mm">124.880</length>
    <height unit="mm">0.100</height>
  </Component>
  <Component name="Kapton">
    <Material>SVD_Kapton</Material>
    <Color>#550011</Color>
    <width  unit="mm">59.600</width>
    <length unit="mm">124.880</length>
    <height unit="mm">0.150</height>
  </Component>
  <Component name="KaptonFlex">
    <Material>SVD_KaptonFlex</Material>
    <Color>#110000</Color>
    <width  unit="mm">59.600</width>
    <length unit="mm">124.880</length>
    <height unit="mm">0.025</height>
  </Component>
  <Component name="RohacellPad">
    <Material>SVD_RohacellPad</Material>
    <Color>#220000</Color>
    <width  unit="mm">59.600</width>
    <length unit="mm">124.880</length>
    <height unit="mm">1.000</height>
  </Component>
  <Component name="Chips">
    <Material>SVD_SiliconChips</Material>
    <Color>#440000</Color>
    <width  unit="mm">8.055</width>
    <length unit="mm">124.880</length>
    <height unit="mm">0.400</height>
  </Component>
  <Component name="KaptonFrontSlanted">
    <Material>SVD_KaptonFront</Material>
    <Color>#440000</Color>
    <width  unit="mm">60.630</width>
    <width2 unit="mm">41.020</width2>
    <length unit="mm">125.580</length>
    <height unit="mm">0.100</height>
  </Component>
  <Component name="KaptonSlanted">
    <Material>SVD_Kapton</Material>
    <Color>#440011</Color>
    <width  unit="mm">60.630</width>
    <width2 unit="mm">41.020</width2>
    <length unit="mm">125.580</length>
    <height unit="mm">0.150</height>
  </Component>
</Components>
