<?xml version="1.0" encoding="UTF-8"?>

<!-- definitions of various setups built from basic elements of TB geometry -->

<setups desc="definitions of various setups">
  <!-- rotation angles: phi, theta, psi (default=0) -->
  <!-- translations: x, y, z (default=0) -->
  
  <CDCTrigger descr="trigger scintilators + scatterer plate">
    <!-- elements are aligned along internal z-axis -->
    <element>
      <type>TriggerCounter</type>
      <name>Trigger1</name>
      <detectorID>1</detectorID>
      <z unit="mm">-20</z>
    </element>
    <element>
      <type>Plate</type>
      <name>Scatterer</name>
      <z unit="mm">0</z>
    </element>
    <element>
      <type>TriggerCounter</type>
      <name>Trigger2</name>
      <detectorID>2</detectorID>
      <z unit="mm">20</z>
    </element>
  </CDCTrigger>

</setups>


