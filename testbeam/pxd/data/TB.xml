<?xml version="1.0" encoding="UTF-8"?>
<DetectorComponent name="TB"
	xmlns:xi="http://www.w3.org/2001/XInclude">
	<Creator library="testbeam_pxd">TBCreator</Creator>
	<Content>
		<!-- If this is true, TrueHits will only be created for primary particles, 
			secondaries produced by Geant4 will not create TrueHits -->
		<OnlyPrimaryTrueHits>false</OnlyPrimaryTrueHits>
		<!--Settings for background and exposure studies -->
		<ActiveChips desc="Set to true to make chips on sensors sensitive">false</ActiveChips>
		<SeeNeutrons desc="Set to true to make sensitive detectors see neutrons">false</SeeNeutrons>
		<SensitiveThreshold desc="Minimum deposited energy per geant4 step"
			unit="eV">1.0</SensitiveThreshold>
		<Volumes>

			<Volume>
				<Name>Tel0Container</Name>
				<DZ unit="cm">0</DZ>
				<xi:include href="TB-Snippets.xml"
					xpointer="xpointer(//Snippet[@name='ModuleContainer']/*)" />
				<Volume>
					<Name>Tel0</Name>
					<xi:include href="TB-Snippets.xml"
						xpointer="xpointer(//Snippet[@name='TelescopeSensor']/*)" />
					<Active>
						<SensorID>1</SensorID>
						<xi:include href="TB-Snippets.xml"
							xpointer="xpointer(//Snippet[@name='TelescopeActive']/*)" />
					</Active>
				</Volume>
				<xi:include href="TB-Snippets.xml"
					xpointer="xpointer(//Snippet[@name='AluminiumWindows']/*)" />
			</Volume>

			<Volume>
				<Name>Tel1Container</Name>
				<DZ unit="cm">10</DZ>
				<xi:include href="TB-Snippets.xml"
					xpointer="xpointer(//Snippet[@name='ModuleContainer']/*)" />
				<Volume>
					<Name>Tel1</Name>
					<xi:include href="TB-Snippets.xml"
						xpointer="xpointer(//Snippet[@name='TelescopeSensor']/*)" />
					<Active>
						<SensorID>2</SensorID>
						<xi:include href="TB-Snippets.xml"
							xpointer="xpointer(//Snippet[@name='TelescopeActive']/*)" />
					</Active>
				</Volume>
				<xi:include href="TB-Snippets.xml"
					xpointer="xpointer(//Snippet[@name='AluminiumWindows']/*)" />
			</Volume>

			<Volume>
				<Name>Tel2Container</Name>
				<DZ unit="cm">20</DZ>
				<xi:include href="TB-Snippets.xml"
					xpointer="xpointer(//Snippet[@name='ModuleContainer']/*)" />
				<Volume>
					<Name>Tel2</Name>
					<xi:include href="TB-Snippets.xml"
						xpointer="xpointer(//Snippet[@name='TelescopeSensor']/*)" />
					<Active>
						<SensorID>3</SensorID>
						<xi:include href="TB-Snippets.xml"
							xpointer="xpointer(//Snippet[@name='TelescopeActive']/*)" />
					</Active>
				</Volume>
				<xi:include href="TB-Snippets.xml"
					xpointer="xpointer(//Snippet[@name='AluminiumWindows']/*)" />
			</Volume>

			<Volume>
				<Name>DUTContainer</Name>
				<DZ unit="cm">39.5</DZ>
				<xi:include href="TB-Snippets.xml"
					xpointer="xpointer(//Snippet[@name='ModuleContainer']/*)" />
				<Volume>
					<Name>DUT</Name>
					<Color>#006699</Color>
					<Material>Si</Material>
					<Shape>Box</Shape>

					<DX unit="mm">0</DX>
					<DY unit="mm">0</DY>
					<DZ unit="mm">0</DZ>
					<Theta unit="deg">0</Theta>
					<Phi unit="deg">0</Phi>
					<Psi unit="deg">0</Psi>
					<HalfX unit="mm">1.6</HalfX>
					<HalfY unit="mm">0.8</HalfY>
					<HalfZ unit="mm">0.025</HalfZ>
					<Active>
						<SensorID>4</SensorID>
						<DetectorType>PXD</DetectorType>
						<stepSize unit="um">5</stepSize>
						<pixelsR>64</pixelsR>
						<pixelsZ>32</pixelsZ>
						<pixelsZ>0</pixelsZ>
						<splitLength unit="mm">0.0</splitLength>
						<BulkDoping unit="1/um^3">10.0</BulkDoping>
						<BackVoltage unit="V">-60</BackVoltage>
						<TopVoltage unit="V">0.0</TopVoltage>
						<SourceBorder unit="um">3.0</SourceBorder>
						<ClearBorder unit="um">8.0</ClearBorder>
						<DrainBorder unit="um">8.0</DrainBorder>
						<GateDepth unit="um">22</GateDepth>
						<DoublePixel>true</DoublePixel>
						<IntegrationStart unit="us">-10.0</IntegrationStart>
						<IntegrationEnd unit="us"> 10.0</IntegrationEnd>
					</Active>
				</Volume>
				<xi:include href="TB-Snippets.xml"
					xpointer="xpointer(//Snippet[@name='AluminiumWindows']/*)" />
			</Volume>

			<Volume>
				<Name>Tel3Container</Name>
				<DZ unit="cm">59.5</DZ>
				<xi:include href="TB-Snippets.xml"
					xpointer="xpointer(//Snippet[@name='ModuleContainer']/*)" />
				<Volume>
					<Name>Tel3</Name>
					<xi:include href="TB-Snippets.xml"
						xpointer="xpointer(//Snippet[@name='TelescopeSensor']/*)" />
					<Active>
						<SensorID>5</SensorID>
						<xi:include href="TB-Snippets.xml"
							xpointer="xpointer(//Snippet[@name='TelescopeActive']/*)" />
					</Active>
				</Volume>
				<xi:include href="TB-Snippets.xml"
					xpointer="xpointer(//Snippet[@name='AluminiumWindows']/*)" />
			</Volume>

			<Volume>
				<Name>Tel4Container</Name>
				<DZ unit="cm">69.5</DZ>
				<xi:include href="TB-Snippets.xml"
					xpointer="xpointer(//Snippet[@name='ModuleContainer']/*)" />
				<Volume>
					<Name>Tel4</Name>
					<xi:include href="TB-Snippets.xml"
						xpointer="xpointer(//Snippet[@name='TelescopeSensor']/*)" />
					<Active>
						<SensorID>6</SensorID>
						<xi:include href="TB-Snippets.xml"
							xpointer="xpointer(//Snippet[@name='TelescopeActive']/*)" />
					</Active>
				</Volume>
				<xi:include href="TB-Snippets.xml"
					xpointer="xpointer(//Snippet[@name='AluminiumWindows']/*)" />
			</Volume>

			<Volume>
				<Name>Tel5Container</Name>
				<DZ unit="cm">79.5</DZ>
				<xi:include href="TB-Snippets.xml"
					xpointer="xpointer(//Snippet[@name='ModuleContainer']/*)" />
				<Volume>
					<Name>Tel5</Name>
					<xi:include href="TB-Snippets.xml"
						xpointer="xpointer(//Snippet[@name='TelescopeSensor']/*)" />
					<Active>
						<SensorID>7</SensorID>
						<xi:include href="TB-Snippets.xml"
							xpointer="xpointer(//Snippet[@name='TelescopeActive']/*)" />
					</Active>
				</Volume>
				<xi:include href="TB-Snippets.xml"
					xpointer="xpointer(//Snippet[@name='AluminiumWindows']/*)" />
			</Volume>

		</Volumes>
	</Content>
</DetectorComponent>
