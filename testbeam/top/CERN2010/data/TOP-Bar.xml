<?xml version="1.0" encoding="UTF-8"?>
<Bars desc="Parameters of TOP Bars">
  <BarMaterial>TOPSiO2</BarMaterial>
  <Nbar desc="Number of quartz bars">1</Nbar>
  <Radius desc="Distance from quartz bar to IP (inner radius)" unit="cm">119.0</Radius>
  <Phi0 desc="azimuthal angle of first bar" unit="deg">0.0</Phi0>
  <QWidth desc="Bar width" unit="mm">400</QWidth>
  <QThickness desc="Bar thickness" unit="mm">20</QThickness>
  <QZBackward desc="Backward edge of the quartz bar" unit="cm">0.0</QZBackward>
  <QBar1Length desc="Length of the first bar segment" unit="cm">90.0</QBar1Length>
  <QBar2Length desc="Length of the second bar segment" unit="cm">90.0</QBar2Length>
  <QBarMirror desc="Length of the mirror section" unit="cm">5.0</QBarMirror>
  <QWedgeLength dest="Length of the wedge" unit="mm">1</QWedgeLength>
  <QWedgeWidth desc="Width of the wedge" unit="mm">400</QWedgeWidth>
  <QWedgeDown dest="Wedge extension downward" unit="mm">0</QWedgeDown>
  <QWedgeFlat desc="Wedge flat portion at exit" unit="mm">0</QWedgeFlat>
    
  <Glue>
    <GlueMaterial>TOPglueNOA61</GlueMaterial>
    <Thicknes1 desc="glue thicknes quartz-wedge" unit="mm">0.1</Thicknes1>
    <Thicknes2 desc="glue thicknes quartz-quartz" unit="mm">0.1</Thicknes2>
    <Thicknes3 desc="glue thicknes quartz-mirror section" unit="mm">0.1</Thicknes3>
  </Glue>

  <Surface>
    <Properties>
      <Property name="REFLECTIVITY" unit="eV">
        <value energy="1.0">0.9994</value> 
        <value energy="2.0">0.9994</value> 
        <value energy="3.0">0.9994</value> 
        <value energy="4.0">0.9994</value> 
      </Property>
      <!-- SPECULARLOBECONSTANT, SPECULARSPIKECONSTANT, Diffuse lobe constant 
	   (implicitly calculated), and BACKSCATTERCONSTANT must sum to unity-->
      <Property name="SPECULARLOBECONSTANT" unit="eV">
        <value energy="1.0">1.0</value> 
        <value energy="2.0">1.0</value> 
        <value energy="3.0">1.0</value> 
        <value energy="4.0">1.0</value> 
      </Property>
      <Property name="SPECULARSPIKECONSTANT" unit="eV">
        <value energy="1.0">0.0</value> 
        <value energy="2.0">0.0</value> 
        <value energy="3.0">0.0</value> 
        <value energy="4.0">0.0</value> 
      </Property>
      <Property name="BACKSCATTERCONSTANT" unit="eV">
        <value energy="1.0">0.0</value> 
        <value energy="2.0">0.0</value> 
        <value energy="3.0">0.0</value> 
        <value energy="4.0">0.0</value> 
      </Property>
    </Properties>
    <Type>dielectric_dielectric</Type>
    <Finish>ground</Finish>
    <Model>unified</Model>
    <SigmaAlpha desc="geant4 parameter for surface roughness">0.000125</SigmaAlpha>
  </Surface>

</Bars>

