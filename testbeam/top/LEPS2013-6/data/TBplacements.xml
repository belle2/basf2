<!-- positioning of various setups into Belle II frame -->

<!-- methods: -->
<!--   Geant: rotation angles (phi, theta, psi) and translation (x, y, z) -->
<!--   AlongBeam: beam starting position and angles, -->
<!--              upstream shift from beam starting position -->

<placements desc="placements of various setups">

  <IRS3Bexp2 desc="beam test at LEPS, June-2013: 
		   trigger/tracker positioning for IRS3B exp#2">
    <setup>LEPStriggerTelescope</setup>
    <method>AlongBeam</method>
    <xBeam unit="cm">0.0</xBeam>
    <yBeam unit="cm">-0.4</yBeam>
    <zBeam unit="cm">122.84</zBeam>
    <thetaBeam unit="deg">89.83</thetaBeam>
    <phiBeam unit="deg">0.0</phiBeam>
    <upstreamShift unit="cm">120</upstreamShift>
