<?xml version="1.0" encoding="UTF-8"?>
<Detector xmlns:xi="http://www.w3.org/2001/XInclude">
  <Name>TOPTBtype</Name>
  <Description>focusing i-TOP used in CRT tests</Description>
  <Global>
    <material>Air</material>
    <width  unit="m">4.0</width>
    <length unit="m">4.0</length>
    <height unit="m">4.0</height>
  </Global>

  <!-- Define materials -->
  <xi:include href="../../../geometry/BasicMaterials.xml"/>
  <xi:include href="../../../top/TOP-Materials.xml"/>
  <xi:include href="Materials.xml"/>

  <DetectorComponent name="TOP" xmlns:xi="http://www.w3.org/2001/XInclude">
    <Creator library="top">TOPCreator</Creator>
    <Content>
      <xi:include href="TOP-Bar.xml"/>
      <xi:include href="TOP-PMT-CFD.xml"/>
      <xi:include href="../../../top/TOP-QENaKSbCs.xml"/>
      <xi:include href="../../../top/TOP-Materials.xml"/>
      <xi:include href="../../../top/TOP-Support.xml"/>
      <xi:include href="TOP-Mirror.xml"/>
      
      <BeamBackgroundStudy desc="not used">0</BeamBackgroundStudy>

    </Content>
  </DetectorComponent>

  <DetectorComponent name="TriggerTelescopeExp1" 
                     xmlns:xi="http://www.w3.org/2001/XInclude">
    <Creator library="testbeam">TOPTBCreator</Creator>
    <Content>
      <experimentType>CFD</experimentType>
      <experimentNumber>1</experimentNumber>
      <xi:include href="TBelements.xml"/>
      <xi:include href="TBsetups.xml"/>
      <xi:include href="TBplacements.xml"/>
    </Content>
  </DetectorComponent>

  <DetectorComponent name="TriggerTelescopeExp2" 
                     xmlns:xi="http://www.w3.org/2001/XInclude">
    <Creator library="testbeam">TOPTBCreator</Creator>
    <Content>
      <experimentType>CFD</experimentType>
      <experimentNumber>2</experimentNumber>
      <xi:include href="TBelements.xml"/>
      <xi:include href="TBsetups.xml"/>
      <xi:include href="TBplacements.xml"/>
    </Content>
  </DetectorComponent>

  <DetectorComponent name="TriggerTelescopeExp3" 
                     xmlns:xi="http://www.w3.org/2001/XInclude">
    <Creator library="testbeam">TOPTBCreator</Creator>
    <Content>
      <experimentType>CFD</experimentType>
      <experimentNumber>3</experimentNumber>
      <xi:include href="TBelements.xml"/>
      <xi:include href="TBsetups.xml"/>
      <xi:include href="TBplacements.xml"/>
    </Content>
  </DetectorComponent>


</Detector>
