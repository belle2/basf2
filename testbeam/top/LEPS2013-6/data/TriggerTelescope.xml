<?xml version="1.0" encoding="UTF-8"?>

<TriggerTelescope desc="trigger and tracking telescope used at LEPS">

  <TriggerS desc="small trigger scintillator">
    <Material>PlasticScintillator</Material>
    <width unit="mm">5.0</width>
    <height unit="mm">5.0</height>
    <thickness unit="mm">5.0</thickness>
  </TriggerS>

  <TriggerM desc="large trigger scintillator">
    <Material>PlasticScintillator</Material>
    <width unit="mm">50.0</width>
    <height unit="mm">50.0</height>
    <thickness unit="mm">5.0</thickness>
  </TriggerM>

  <SciFi desc="scintillating fiber tracker">
    <Material>PlasticScintillator</Material>
    <fiberDiameter unit="mm">2</fiberDiameter>
    <activeDiameter unit="mm">1.8</activeDiameter>
    <fiberLength unit="mm">100</fiberLength>
 
    <numFibersX1 desc="number of fibres in x, first row">16</numFibersX1>
    <numFibersX2 desc="number of fibres in x, second row">16</numFibersX2>
    <shiftX desc="shift in x of second row in respect to the first" unit="mm">1.0</shiftX>
    <distanceX desc="distnace btw. second and first row" unit="mm">2.0</distanceX>
    
    <numFibersY1 desc="number of fibres in y, first row">16</numFibersY1>
    <numFibersY2 desc="number of fibres in y, second row">16</numFibersY2>
    <shiftY desc="shift in y of second row in respect to the first" unit="mm">1.0</shiftY>
    <distanceY desc="distnace btw. second and first row" unit="mm">2.0</distanceY>

    <distancePlanes desc="distance btw. X and Y planes" unit="mm">4.0</distancePlanes>

    <coverPlateMaterial>Aluminum</coverPlateMaterial>
    <coverPlateWidth unit="mm">100</coverPlateWidth>
    <coverPlateHeight unit="mm">100</coverPlateHeight>
    <coverPlateThickness unit="mm">0.5</coverPlateThickness>
    <coverPlateDistance unit="mm">10.0</coverPlateDistance>
  </SciFi>

  <station1 desc="trigger/tracker upstream station">
    <triggerS unit="mm">-105.0</triggerS>
    <triggerM unit="mm">-83.0</triggerM>
    <sciFi unit="mm">0.0</sciFi>
  </station1>

  <station2 desc="trigger/tracker upstream station">
    <sciFi unit="mm">0.0</sciFi>
    <triggerM unit="mm">83.0</triggerM>
    <triggerS unit="mm">105.0</triggerS>
  </station2>

  <stationDistance unit="mm">1194.6</stationDistance>


</TriggerTelescope>

