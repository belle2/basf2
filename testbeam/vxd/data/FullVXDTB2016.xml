  <!-- Subdedectors: PXD -->
  <!-- modified copy of pxd/data/PXD-phase2.xml -->
  <DetectorComponent name="PXD" xmlns:xi="http://www.w3.org/2001/XInclude">
    <Creator library="pxd">PXDCreator</Creator>
    <Content>
      <!-- Set the default Material for the Envelope and Components which do not have a Material assigned -->
      <DefaultMaterial>Air</DefaultMaterial>
      <!--If this is true, all dead Material will be ignored and only the active
      Material will be placed and the rest of the Detector will be filled
      with DefaultMaterial -->
      <OnlyActiveMaterial>false</OnlyActiveMaterial>
      <!-- Set the  stepsize to be used in senistive volumes -->
      <ActiveStepSize unit="um">5</ActiveStepSize>
      <!-- If this is true, TrueHits will only be created for primary particles,
      secondaries produced by Geant4 will not create TrueHits -->
      <OnlyPrimaryTrueHits>false</OnlyPrimaryTrueHits>
      <!--Settings for background and exposure studies -->
      <ActiveChips desc="Set to true to make chips on sensors sensitive">false</ActiveChips>
      <SeeNeutrons desc="Set to true to make sensitive detectors see neutrons">false</SeeNeutrons>
      <SensitiveThreshold desc="Minimum deposited energy per geant4 step" unit="eV">1.0</SensitiveThreshold>
      
      <!-- Displacement parameters -->
      <xi:include href="VXDTB2016-Displacements.xml"/> 
      
      <!-- Include definition of logical volume encapsulating the PXD -->
      <!-- disabled for phase 2 to allow FANGS or CLAWS to come close to the Beampipe -->
      <!-- <xi:include href="PXD-Envelope.xml"/> -->
      <!-- Include the definition of the mechanical support -->
      
      <!-- removed the support structure -->
      <!-- xi:include href="../../pxd/PXD-Support.xml"/ -->
      
      <!-- Include the definition of all the components like ladders, sensors and
      chips -->
      <!--xi:include href="../../pxd/PXD-Components.xml"/ -->
      <Components>
        <!-- Inlude everything from the ladder definitions except forward sensors -->
        <Ladder layer="1">
          <xi:include href="../../pxd/PXD-Components.xml" xpointer="xpointer(/Components/Ladder[@layer=1]/*[not(self::Sensor[@id=1])])" />
        </Ladder>
        <Ladder layer="2">
          <xi:include href="../../pxd/PXD-Components.xml" xpointer="xpointer(/Components/Ladder[@layer=2]/*[not(self::Sensor[@id=1])])" />
        </Ladder>
        <!-- now we include all other components from PXD-Components which are not ladder definitions -->
        <xi:include href="../../pxd/PXD-Components.xml" xpointer="xpointer(/Components/*[not(self::Ladder)])" />
      </Components>
      <!-- include radiation sensor definition -->
      <xi:include href="../../pxd/PXD-RadiationSensors.xml"/>
      
      <!-- PXD is build as two half shells which will be attached to the beampipe
      from the sides. We follow this scheme in the simulation geometry for
      alignment purposes. Each shell consists of a number of ladders for
      each layer. -->
      <!-- phase two is identical to the nominal PXD but only one half shell with
      one ladder per layer -->
      <HalfShell name="Ying">
        <!-- removed the support -->
        <!-- Define the ladders in each layer with increasing phi angle -->
        <Layer id="1">
          <Ladder id="1"><phi unit="deg">0</phi></Ladder>
        </Layer>
        <Layer id="2">
          <Ladder id="1"><phi unit="deg">0</phi></Ladder>
        </Layer>
      </HalfShell>
      <!-- the second half shell is empty but we still want the support -->
      <!-- removed the support -->
      
    </Content>
  </DetectorComponent>
  
  <!-- Subdedectors: SVD -->
  <!-- modified copy of svd/data/SVD-phase2.xml -->
  <DetectorComponent name="SVD" xmlns:xi="http://www.w3.org/2001/XInclude">
    <!-- TODO:
    - Check thickness/material of kapton cables
    - Add readout boards
    -->
    <Creator library="svd">SVDCreator</Creator>
    <Content>
      <!-- Set the default Material for the Envelope and Components which do not have a Material assigned -->
      <DefaultMaterial>Air</DefaultMaterial>
      <!--If this is true, all dead Material will be ignored and only the active
      Material will be placed and the rest of the Detector will be filled
      with DefaultMaterial -->
      <OnlyActiveMaterial>false</OnlyActiveMaterial>
      <!-- Set the  stepsize to be used in senistive volumes -->
      <ActiveStepSize unit="um">5</ActiveStepSize>
      <!-- If this is true, TrueHits will only be created for primary particles,
      secondaries produced by Geant4 will not create TrueHits -->
      <OnlyPrimaryTrueHits>false</OnlyPrimaryTrueHits>
      <!--Settings for background and exposure studies -->
      <ActiveChips desc="Set to true to make chips on sensors sensitive">false</ActiveChips>
      <SeeNeutrons desc="Set to true to make sensitive detectors see neutrons">false</SeeNeutrons>
      <SensitiveThreshold desc="Minimum deposited energy per geant4 step" unit="eV">1.0</SensitiveThreshold>
      
      <!-- Displacement parameters -->
      <xi:include href="VXDTB2016-Displacements.xml"/>
      
      
      <!-- removed all the support structure see svd/data/SVD-phase2.xml -->
      
      <!-- Include the definition of all the components like ladders, sensors and
      chips -->
      <!-- Except that for phase 2 we want the same ladder layout but no windmill so
      the sensor middle should lie in the accelerator plane and not be shifted.
      To do this we don't include the full components file but do it in pieces
      and modify the shifts -->
      <Components>
        <!-- Inlude everything from the ladder definition except the shift from phase 3 using xpointer -->
        <Ladder layer="3">
          <shift unit="mm">0</shift>
          <xi:include href="../../svd/SVD-Components.xml" xpointer="xpointer(/Components/Ladder[@layer=3]/*[not(self::shift)])" />
        </Ladder>
        <Ladder layer="4">
          <shift unit="mm">0</shift>
          <xi:include href="../../svd/SVD-Components.xml" xpointer="xpointer(/Components/Ladder[@layer=4]/*[not(self::shift)])" />
        </Ladder>
        <Ladder layer="5">
          <shift unit="mm">0</shift>
          <xi:include href="../../svd/SVD-Components.xml" xpointer="xpointer(/Components/Ladder[@layer=5]/*[not(self::shift)])" />
        </Ladder>
        <Ladder layer="6">
          <shift unit="mm">0</shift>
          <xi:include href="../../svd/SVD-Components.xml" xpointer="xpointer(/Components/Ladder[@layer=6]/*[not(self::shift)])" />
        </Ladder>
        <!-- now we include all other components from SVD-Components which are not ladder definitions -->
        <xi:include href="../../svd/SVD-Components.xml" xpointer="xpointer(/Components/*[not(self::Ladder)])" />
      </Components>
      
      <!-- include radiation sensor definition -->
      <!-- not sure if they are in phase 2 but I think not -->
      <!-- <xi:include href="SVD-RadiationSensors.xml"/> -->
      
      <!-- Only for testing: Each layer with only one ladder to check module positions -->
      <!--<HalfShell name="Pat">
      <shellAngle unit="deg">0</shellAngle>
      <Layer id="3">
      <Ladder id="1"> <phi unit="deg"> 60</phi></Ladder>
      </Layer>
      <Layer id="4">
      <Ladder id="1"> <phi unit="deg"> 120</phi></Ladder>
      </Layer>
      <Layer id="5">
      <Ladder id="1"> <phi unit="deg"> 180</phi></Ladder>
      </Layer>
      <Layer id="6">
      <Ladder id="1"> <phi unit="deg"> 240</phi></Ladder>
      </Layer>
      </HalfShell>
      -->
      
      <!-- For more information about the meaning of these parameter see pxd/PXD.xml -->
      <HalfShell name="Pat">
        <shellAngle unit="deg">0</shellAngle>
        <Layer id="3">
          <Ladder id="1">  <phi unit="deg">  0.000</phi></Ladder>
        </Layer>
        <Layer id="4">
          <Ladder id="1">  <phi unit="deg">  0.000</phi></Ladder>
        </Layer>
        <Layer id="5">
          <Ladder id="1">  <phi unit="deg">  0.000</phi></Ladder>
        </Layer>
        <Layer id="6">
          <Ladder id="1">  <phi unit="deg">  0.000</phi></Ladder>
        </Layer>
      </HalfShell>
      <HalfShell name="Mat">
        <shellAngle unit="deg">180</shellAngle>
      </HalfShell>
    </Content>
    <xi:include href="../../svd/svd_mapping.xml"/>
  </DetectorComponent>
  
