	<Snippet name="PXD_active">
          <DetectorType>PXD</DetectorType>
          
          <stepSize unit="um">5</stepSize>
          <!-- define the number of pixels in rphi direction -->
          <pixelsR>250</pixelsR>
          <!-- define the number of pixels in z direction. There are two values since we have two different pixel sizes inside of one module: Larger pixels in the outer area, smaller pixels in the middle -->
          <pixelsZ>512</pixelsZ>
          <pixelsZ>0</pixelsZ>
          <!-- splitLength defines the position inside the active area (starting at the outside) where the pixel size changes. Pixel size is calculated automatically from the size of the active area and the number of pixels -->
          <splitLength unit="mm">0.0</splitLength>
          <!-- Parameters describing the physical attributes of the sensor needed for digitization. The voltages might be time dependent and than should be placed somewhere else -->
          <BulkDoping unit="1/um^3">10.0</BulkDoping>
          <BackVoltage unit="V">-60.0</BackVoltage>
          <TopVoltage unit="V">0.0</TopVoltage>
          <SourceBorder unit="um">3.0</SourceBorder>
          <ClearBorder unit="um">8.0</ClearBorder>
          <DrainBorder unit="um">8.0</DrainBorder>
          <GateDepth unit="um">22</GateDepth>
          <DoublePixel>true</DoublePixel>
          <!-- Define the integration window to be 20Âµs. This probably should go somewhere else -->
          <IntegrationStart unit="us">-10.0</IntegrationStart>
          <IntegrationEnd   unit="us"> 10.0</IntegrationEnd>				 
	</Snippet>	
	<Snippet name="SVD_active">
          <DetectorType>SVD</DetectorType>
          <stepSize unit="um">5</stepSize>
          <stripsU>768</stripsU>
