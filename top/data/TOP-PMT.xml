<?xml version="1.0" encoding="UTF-8"?>
<PMTs>
    
    <Xgap desc="Gap between PMTs in x direction" unit="mm">0.5</Xgap>
    <Ygap desc="Gap between PMTs in y direction" unit="mm">0.5</Ygap>
    <nPMTx desc="Number of PMT modules columns">16</nPMTx>
    <nPMTy desc="Number of PMT modules rows">2</nPMTy>
    <dGlue desc="Thickness of the glue with which the PMTs are glued to the wedge" unit="mm">0.1</dGlue>
    <glueMaterial>PMTGlue</glueMaterial>
    
    <Module> 
        <wallMaterial>TOPPMTCase</wallMaterial>
        <fillMaterial>TOPAir</fillMaterial>
        <ModuleXSize desc="module size in X" unit="mm">27.5</ModuleXSize>
        <ModuleYSize desc="module size in Y" unit="mm">27.5</ModuleYSize>
        <ModuleZSize  desc="module wall size in Z" unit="mm">9.6</ModuleZSize>
        <ModuleWall desc="thickness of the module wall" unit="mm">0.5</ModuleWall>
        
        <SensXSize desc="Active surface x dimension" unit="mm">22.5</SensXSize>
        <SensYSize desc="Active surface y dimension" unit="mm">22.5</SensYSize>
        <SensThickness desc="Thickness of active surface" unit="mm">0.1</SensThickness>	
        <sensMaterial desc="Active surface material">TOPPMTBialkali</sensMaterial>
        
        <winMaterial>TOPBorosilicateGlass</winMaterial>
        <WindowThickness desc="Thickness of window" unit="mm">1.5</WindowThickness> 
                
        <BottomThickness desc="Thickness of the bottom of the PMT" unit="mm">2</BottomThickness>
        <botMaterial desc="Material of reflective bottom">TOPPMTBottom</botMaterial>
        
        <PadXNum desc="Number of pads in x direction">4</PadXNum>
        <PadYNum desc="Number of pads in y direction">4</PadYNum>

        <TDCbits desc="Number of TDC bits available">12</TDCbits>
        <TDCbitwidth desc="Width of TDC bit" unit="ns">0.025</TDCbitwidth>
    </Module>
    
</PMTs>

