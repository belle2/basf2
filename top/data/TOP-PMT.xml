  <dGlue desc="Thickness of glue+filter btw. PMTs and wedge" unit="mm">2.5</dGlue>
  <glueMaterial>TOPWavelengthFilterIHU340</glueMaterial>
  <stackMaterial>TOPAir</stackMaterial>
    
  <Module> 
    <wallMaterial>TOPPMTCase</wallMaterial>
    <fillMaterial>TOPVacuum</fillMaterial>
    <ModuleXSize desc="module size in X" unit="mm">27.5</ModuleXSize>
    <ModuleYSize desc="module size in Y" unit="mm">27.5</ModuleYSize>
    <ModuleZSize  desc="module wall size in Z" unit="mm">9.6</ModuleZSize>
    <ModuleWall desc="thickness of the module wall" unit="mm">0.5</ModuleWall>
    
