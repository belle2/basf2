    <SensYSize desc="Active surface y dimension" unit="mm">22.5</SensYSize>
    <SensThickness desc="Thickness of active surface" unit="mm">0.1</SensThickness>	
    
    <winMaterial>TOPBorosilicateGlass</winMaterial>
    <WindowThickness desc="Thickness of window" unit="mm">1.5</WindowThickness> 
    
    <botMaterial desc="Material of reflective bottom">TOPPMTBottom</botMaterial>
