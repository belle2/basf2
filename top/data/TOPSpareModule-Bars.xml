<?xml version="1.0" encoding="UTF-8"?>
<Bars desc="Parameters of TOP Bars">
  <BarMaterial>TOPSiO2</BarMaterial>
  <Nbar desc="Number of quartz bars">1</Nbar>
  <Radius desc="Distance from quartz bar to IP (inner radius)" unit="cm">0</Radius>
  <Phi0 desc="azimuthal angle of first bar" unit="deg">90</Phi0>
  <QWidth desc="Bar width" unit="mm">450</QWidth>
  <QThickness desc="Bar thickness" unit="mm">20</QThickness>
  <QZBackward desc="Backward edge of the quartz bar" unit="cm">-69.5</QZBackward>
  <QBar1Length desc="Length of the first bar segment" unit="cm">125.0</QBar1Length>
  <QBar2Length desc="Length of the second bar segment" unit="cm">125.0</QBar2Length>
  <QBarMirror desc="Length of the mirror section" unit="cm">10.0</QBarMirror>
  <QWedgeLength dest="Length of the wedge" unit="mm">100</QWedgeLength>
  <QWedgeWidth desc="Width of the wedge" unit="mm">454</QWedgeWidth>
  <QWedgeDown dest="Wedge extension downward" unit="mm">31</QWedgeDown>
  <QWedgeFlat desc="Wedge flat portion at exit" unit="mm">5</QWedgeFlat>
    
  <Glue>
    <GlueMaterial>TOPglueNOA61</GlueMaterial>
    <Thicknes1 desc="glue thicknes quartz-wedge" unit="mm">0.05</Thicknes1>
    <Thicknes2 desc="glue thicknes quartz-quartz" unit="mm">0.05</Thicknes2>
    <Thicknes3 desc="glue thicknes quartz-mirror section" unit="mm">0.05</Thicknes3>
  </Glue>
  <BrokenJointFraction desr="fraction of broken prism glue joint">0</BrokenJointFraction>
  
  <Surface name="Quartz bar">
    <Properties>
      <Property name="REFLECTIVITY" unit="eV">
        <value energy="1.0">0.9994</value> 
        <value energy="2.0">0.9994</value> 
        <value energy="3.0">0.9994</value> 
        <value energy="4.0">0.9994</value> 
      </Property>
      <!-- SPECULARLOBECONSTANT, SPECULARSPIKECONSTANT, Diffuse lobe constant (implicitly calculated), and BACKSCATTERCONSTANT must sum to unity-->
      <Property name="SPECULARLOBECONSTANT" unit="eV">
        <value energy="1.0">1.0</value> 
        <value energy="2.0">1.0</value> 
        <value energy="3.0">1.0</value> 
        <value energy="4.0">1.0</value> 
      </Property>
      <Property name="SPECULARSPIKECONSTANT" unit="eV">
        <value energy="1.0">0.0</value> 
        <value energy="2.0">0.0</value> 
        <value energy="3.0">0.0</value> 
        <value energy="4.0">0.0</value> 
      </Property>
      <Property name="BACKSCATTERCONSTANT" unit="eV">
        <value energy="1.0">0.0</value> 
        <value energy="2.0">0.0</value> 
        <value energy="3.0">0.0</value> 
        <value energy="4.0">0.0</value> 
      </Property>
    </Properties>
    <Type>dielectric_dielectric</Type>
    <Finish>ground</Finish>
    <Model>unified</Model>
    <SigmaAlpha desc="geant4 parameter for surface roughness">0.000125</SigmaAlpha>
  </Surface>

</Bars>
