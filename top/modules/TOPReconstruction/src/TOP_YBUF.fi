c--   TOP_YBUF.fi: temporary buffer for peaks in y resulting from yscan

      integer NBUF
      PARAMETER (NBUF=1000)
      INTEGER NP                ! counter
      INTEGER ICHA(NBUF)        ! channel
      REAL SUM(NBUF)            ! sum, prop. to number of photons
      REAL E0(NBUF)             ! mean energy
      REAL SIGE2(NBUF)          ! energy sigma squared
      REAL ECPP(NBUF)           ! center of pad energy

      COMMON /TOP_YBUF/ NP, ICHA, SUM, E0, SIGE2, ECPP

