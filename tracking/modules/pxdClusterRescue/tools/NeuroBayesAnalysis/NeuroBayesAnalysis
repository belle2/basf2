echo // Note: ROOT has to be setup.
echo // 'ahist.txt' and 'correl_signi.txt' files have to be placed in this directory.

echo // Convert 'ahist.txt' to 'teacherHistos.root' ROOT file.
root -l -q -b asciiToRoot.C

echo // Convert 'teacherHistos.root' ROOT file to 'analysis.pdf' file.
root -l -q -b analysis.C

echo // Convert 'teacherHistos.root' ROOT file to 'analysisROC.pdf' file.
root -l -q -b analysisROC.C
